<script>
const CONFIG_URL='./config.json';
function setLink(el,url){
  if(url && String(url).trim()){ el.href=String(url).trim(); el.classList.remove('disabled'); }
  else { el.href='#'; el.classList.add('disabled'); }
}
function openChat(url){
  if(!url||!String(url).trim()){ alert('尚未設定 SOP AI 連結（請到後台更新 config.json）。'); return; }
  chatFrame.src=String(url).trim();
  chat.classList.add('show');
}
(async()=>{
  let cfg=null;
  try{ const r=await fetch(CONFIG_URL+'?v='+Date.now(),{cache:'no-store'}); if(r.ok) cfg=await r.json(); }catch(e){}
  if(!cfg) return;
  brandMain.textContent=cfg.brandMain||'拾葉設計';
  brandSub.textContent=cfg.brandSub||'';
  tagline.textContent=cfg.tagline||'';

  if(cfg.backgroundImageUrl && String(cfg.backgroundImageUrl).trim()) {
    bg.style.backgroundImage="url('"+String(cfg.backgroundImageUrl).replace(/'/g,"\\'")+"')";
  }

  setLink(lnkProgress, cfg.links?.progressSiteUrl);
  setLink(lnkSopDrive, cfg.links?.sopDriveUrl);
  setLink(lnkMyYear, cfg.links?.myYearUrl);
  setLink(lnkToday, cfg.links?.todayUrl);
  setLink(lnkProjectYear, cfg.links?.projectYearUrl);

  const aiUrl=cfg.ai?.iframeOrShareUrl||'';
  fab.addEventListener('click',()=>openChat(aiUrl));
  closeBtn.addEventListener('click',()=>chat.classList.remove('show'));
  popoutBtn.addEventListener('click',()=>{ if(aiUrl) window.open(aiUrl,'_blank','noreferrer'); });
})();
</script>
